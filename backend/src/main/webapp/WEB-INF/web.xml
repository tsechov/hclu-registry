<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <display-name>SML Bootzooka</display-name>

    <description>
        SML Bootzooka example application using Scalatra and AngularJS
    </description>

    <!--
      This listener loads a class in the default package called ScalatraBootstrap.
      That class should should implement org.scalatra.LifeCycle.  Your app
      can be configured in Scala code there.
    -->
    <listener>
        <listener-class>org.scalatra.servlet.ScalatraListener</listener-class>
    </listener>

    <error-page>
        <error-code>404</error-code>
        <location>/error404redirectingPage.html</location>
    </error-page>
</web-app>
